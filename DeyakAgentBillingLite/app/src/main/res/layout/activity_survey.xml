<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_survey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arkipl.deyakagentbillinglite.SurveyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">


            <!-- Mobileno -->
            <LinearLayout
                android:id="@+id/survey_holder_mobno"

                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:background="@drawable/form_back"
                android:orientation="vertical"
                android:layout_marginBottom="2dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/form_tag"
                    android:text="@string/survey_input_1"/>

                <EditText
                    android:id="@+id/survey_field_mobno"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/form_input_back" />

                <TextView
                    android:id="@+id/survey_field_mobno_error"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/form_error"
                    android:text=""/>

            </LinearLayout>


            <!-- Meter serial no -->
            <LinearLayout
                android:id="@+id/survey_holder_meterslno"

                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:background="@drawable/form_back"
                android:orientation="vertical"
                android:layout_marginBottom="2dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/form_tag"
                    android:text="@string/survey_input_2"/>

                <EditText
                    android:id="@+id/survey_field_meterslno"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:inputType="textCapCharacters"
                    android:background="@drawable/form_input_back"/>

            </LinearLayout>


            <!-- Meter type -->
            <LinearLayout
                android:id="@+id/survey_holder_metertype"

                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:background="@drawable/form_back"
                android:orientation="vertical"
                android:layout_marginBottom="2dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/form_tag"
                    android:text="@string/survey_input_3"/>

                <Spinner
                    android:id="@+id/survey_field_metertype"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:inputType="text"
                    android:background="@drawable/form_input_back"/>

            </LinearLayout>


            <!-- Meter Height -->
            <LinearLayout
                android:id="@+id/survey_holder_meterheight"

                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:background="@drawable/form_back"
                android:orientation="vertical"
                android:layout_marginBottom="2dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/form_tag"
                    android:text="@string/survey_input_4"/>

                <EditText
                    android:id="@+id/survey_field_meterheight"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/form_input_back"/>

            </LinearLayout>


            <!-- Consumer Type -->
            <LinearLayout
                android:id="@+id/survey_holder_consumertype"

                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:background="@drawable/form_back"
                android:orientation="vertical"
                android:layout_marginBottom="2dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/form_tag"
                    android:text="@string/survey_input_5"/>

                <Spinner
                    android:id="@+id/survey_field_consumertype"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:inputType="text"
                    android:background="@drawable/form_input_back"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
